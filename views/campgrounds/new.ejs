<%- include("../partials/header.ejs") %>

<div class="container">
    <h1>Add new campground here</h1>
    <div style="width:50%; margin: 20px auto;">
        <form action="/campgrounds" method="post">
            <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Place">
            </div>
            <div class="form-group">
            <input type="text" class="form-control" name="image"  placeholder="image URL">
            </div>
            <div class="form-group">
            <input type="text" class="form-control" name="desc"  placeholder="Describe the place">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
        <a href="/campgrounds">See Campgrounds</a>
    </div>
</div>

