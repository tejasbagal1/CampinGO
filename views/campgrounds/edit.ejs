<%- include("../partials/header.ejs") %>

<div class="container">
    <h1>Edit <%= campground.name %></h1>
    <div style="width:50%; margin: 20px auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
            <div class="form-group">
            <input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>">
            </div>
            <div class="form-group">
            <input type="text" class="form-control" name="campground[image]" value="<%= campground.img %>">
            </div>
            <div class="form-group">
            <input type="text" class="form-control" name="campground[desc]" value="<%= campground.desc %>">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Save Changes</button>
        </form>
        <a href="/campgrounds">See Campgrounds</a>
    </div>
</div>

<%- include("../partials/footer.ejs") %>